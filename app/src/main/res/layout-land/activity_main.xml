<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flash_horizontal1"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnContactame"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:backgroundTint="#99FF0404"
        android:text="Contactame aquí"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:cornerRadius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="#A4DC7474"
        app:strokeWidth="2dp" />

    <TextView
        android:id="@+id/AcercaDeMi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ABFF0404"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="¿ Quires desafiarme a una carrera?"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>