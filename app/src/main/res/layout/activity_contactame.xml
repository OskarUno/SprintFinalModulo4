<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BC353434"
    tools:context=".ContactameActivity">

    <Button
        android:id="@+id/btnWhatsAap2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:text="WhatsApp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLinkedin2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnLinkedin2"
        app:layout_constraintTop_toBottomOf="@+id/btnLinkedin2" />

    <Button
        android:id="@+id/btnLinkedin2"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_marginTop="113dp"
        android:text="Linkedin"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C1CC0808"
        android:contextClickable="false"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="Contactame"
        app:titleTextColor="#FFFFFF" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="339dp"
        android:layout_height="116dp"
        android:layout_marginTop="92dp"
        android:background="#9C3D3D"
        android:gravity="center_horizontal"
        android:text="Enviame un Mensaje al mail"
        android:textColor="#FAF9F9"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWhatsAap2" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="315dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/textEmail"
        app:layout_constraintEnd_toEndOf="@+id/textEmail"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toTopOf="@+id/textEmail"
        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/btnEnviarMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar Mail"
        app:layout_constraintEnd_toEndOf="@+id/textEmail"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:background="#92CC7A"
        app:layout_constraintBottom_toBottomOf="@+id/btnWhatsAap2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/btnWhatsAap2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/whatsapp_svgrepo_com" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="67dp"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnLinkedin2"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/btnLinkedin2"
        app:srcCompat="@drawable/linkedin" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.11" />

</androidx.constraintlayout.widget.ConstraintLayout>